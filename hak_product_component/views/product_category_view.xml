<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_category_form_inherit_product_component" model="ir.ui.view">
            <field name="name">view.product.category.form.inherit.product.component</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="component_category_id"/>
                    <field name="byproduct_component_category_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>