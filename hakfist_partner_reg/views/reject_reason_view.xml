<odoo>
    <record model="ir.ui.view" id="view_reject_reason_form_view">
        <field name="name">Reject Reason Form</field>
        <field name="model">reject.reason</field>
        <field name="arch" type="xml">
            <form string="Reject Reason">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_reject_reason_list" model="ir.ui.view">
        <field name="name">Reject Reason List</field>
        <field name="model">reject.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_reject_reason" model="ir.actions.act_window">
        <field name="name">Reject Reason</field>
        <field name="res_model">reject.reason</field>
        <field name="view_mode">tree,form</field>
<!--        <field name="view_id" ref="view_printing_type_list"/>-->
    </record>

    <menuitem id="crm_menu_reject_reason"
              name="Customer Reject Reason"
              parent="crm.menu_crm_config_lead"
              action="action_reject_reason"
              sequence="11"/>

    <menuitem id="sale_menu_reject_reason"
              name="Customer Reject Reason"
              parent="sale.menu_sale_config"
              action="action_reject_reason"
              sequence="21"/>


</odoo>