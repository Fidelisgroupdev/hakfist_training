<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    purchase return reason new field is added in stock return picking model-->
    <record id="view_stock_return_picking_form_inherit" model="ir.ui.view">
        <field name="name">view.stock.return.picking.form.inherit</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_return_moves']//tree/field[@name='quantity']" position="after">
                <field name="user_department" optional="hide"/>
                <field name="reason_for_return"/>
            </xpath>
            <xpath expr="//field[@name='product_return_moves']" position="after">
                <field name="return_notes" placeholder="Add your return notes here..."/>
            </xpath>
        </field>
    </record>

 <!--    purchase return reason new field is added in stock move model-->
    <record id="view_stock_return_picking_inherit" model="ir.ui.view">
        <field name="name">view.stock.return.picking.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="reason_for_return"/>
                <field name="return_notes"/>
            </xpath>
        </field>
    </record>
</odoo>
