<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="choose_packaging_method_view_form" model="ir.ui.view">
        <field name="name">choose.packaging.method.form</field>
        <field name="model">choose.packaging.method</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="packing_id"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="order_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="button_confirm" type="object" string="Add" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="x" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
